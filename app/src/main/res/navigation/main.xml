<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mvvmhilt.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_showsFragment"
            app:destination="@id/showsFragment" />
    </fragment>

    <fragment
        android:id="@+id/showsFragment"
        android:name="com.example.mvvmhilt.ui.shows.ShowsFragment"
        android:label="Shows">
        <action
            android:id="@+id/action_showsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>